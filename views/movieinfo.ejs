<%- include('partials/head') %>
<%- include('partials/navbar') %>

<section>

<div class="container-fluid">
  <div class="row h-100" id="bg-img" style="background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(<%= backdrop %>);background-size:cover;background-repeat:no-repeat;">
    <div class="row">
      <div class="col-auto me-auto text-light">
        <br>
        <figure class="figure text-light">
          <h1 class=""><%= movie.title %></h1>          
          
          <figcaption class="figure-caption text-light">
            <% if (movie.release_date) { %>
            <%- movie.release_date.substring(0, 4) %>
          <% } else { %>
           Year N/A
           <% } %>
           <%- '| ' + (movie.vote_average ?? 'Rating N/A') %>
           <% if (movie.genres[0]) { %>
            <%= '| ' + movie.genres[0].name %> 
            <% } %>
           <% if (movie.genres[1]) { %>
            <%= '| ' + movie.genres[1].name %>
            <% } %>
            <% if (movie.runtime) { %>
              <%= '| ' + movie.runtime + 'min' %>
            <% } else { %>
              | Runtime N/A
            <% } %>
          </figcaption>
          


            
          
          <hr>
        </figure>
      </div>
    
    <div class="col-auto text-light">
      <a href="">
        <button type="button" class="btn text-light">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
      </svg>
      Wishlist
        </button>
    </a>
    </div>
    <div class="row text-light">
      <div class="col">
        <img class="img" src=<%= 'https://image.tmdb.org/t/p/original' + movie.poster_path  %> alt="" style="max-width: 50%;">
      </div>
      
      <div class="col-6"><h6><%= movie.overview %></h6>
        <dl class="row text-light">
          <dt class="col-sm-3">Directed by</dt>
          <dd class="col-sm-9"><%= director[0] %></dd>
        
          <dt class="col-sm-3">Written by</dt>
          <dd class="col-sm-9">
            <% writers.forEach(element => { %>
              <% if (writers[0] != element) { %>
                &#x2022;
              <% } %>
             <%= element.name %>
            <% }) %>
          </dd>
    
          <dt class="col-sm-3">Starring</dt>
          <dd class="col-sm-9">
            <% stars.forEach(element => { %>
              <% if (element) { %>
                <% if (stars[0] != element) { %>
                  &#x2022;
                <% } %>
               <%= element.name %>
              <% } %>
              <% }) %>
              
          </dd>
        
          
        </dl>
      </div>
      
      
        
    
    </div>
    
    
  </div>
    
    
  </div>


</section>


<%- include('partials/foot') %>

